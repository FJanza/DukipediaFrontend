---
import SpeedInsights from "@vercel/speed-insights/astro";
import Analytics from "@vercel/analytics/astro";
interface Props {
  title: string;
}

const {title} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Dukipedia - pÃ¡gina sobre la vida y carrera de Mauro Ezequiel Lombardo"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <SpeedInsights />
    <Analytics />
    <slot />
  </body>
</html>
<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;
  @tailwind screens;
  img {
    user-select: none;
  }

  html {
    font-family: system-ui, sans-serif;
    background: #0f1516;
    color-scheme: dark light;
  }
  body {
    color: white;
  }

  @layer utilities {
    .clip-songs-md-image-yt {
      clip-path: inset(31px 0px 30px 0px round 16px 16px 16px 16px);
    }
    .clip-songs-sm-image-yt {
      clip-path: inset(15px 0px 15px 0px round 16px 16px 16px 16px);
    }
    .clip-full-rounded-md-image-yt {
      clip-path: inset(31px 0px 30px 0px round 8px 8px 8px 8px);
    }
    .clip-full-rounded-sm-image-yt {
      clip-path: inset(29px 0px 29px 0px round 8px 8px 8px 8px);
    }
  }

  /* total width */
  *::-webkit-scrollbar {
    background-color: #0c0c0c;
    scrollbar-width: thin; /* Para Firefox */
    width: 16px;
  }

  /* background of the scrollbar except button or resizer */
  *::-webkit-scrollbar-track {
    background-color: #0e0e0e;
  }

  /* scrollbar itself */
  *::-webkit-scrollbar-thumb {
    background-color: #babac0;
    border-radius: 16px;
    min-height: 60px;
    border: 4px solid #242424;
  }

  /* set button(top and bottom of the scrollbar) */
  *::-webkit-scrollbar-button {
    display: none;
  }
</style>
