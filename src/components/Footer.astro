</footer>

<script>
  let currentLogo = 1;

  const logo1 = document.getElementById("logo1");
  const logo2 = document.getElementById("logo2");

  if (logo1 && logo2)
    setInterval(() => {
      logo1.style.opacity = currentLogo === 1 ? "1" : "0";
      logo2.style.opacity = currentLogo === 2 ? "1" : "0";
      currentLogo = currentLogo === 1 ? 2 : 1;
    }, 5000);
</script>
